<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<ul>
  <% @doses.each do |dose| %>
  <li><%= dose.description %> <%= link_to "Delete dose", dose_path(dose), method: :delete %></li>
  <% end %>
</ul>

<br>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to all cocktails", cocktails_path %>
